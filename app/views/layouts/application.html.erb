<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
        <title>Ilmo2.0</title>
        <%=stylesheet_link_tag "style" %>
    </head>
    <body>
        <div id="container">
            <div id="sisalto">
                <h1>Ilmo 2.0</h1>
                <% if session[:user] %>
                <%= link_to User.find_by_id(session[:user]).username, users_url%> (<%= link_to "Kirjaudu ulos", logout_url %>)
				<br/>
                <%end %>
				
                <% if flash[:warning] %>
                <div id="varoitus">
                    <%= flash[:warning] %>
                </div>
				<br/>
                <%end %>
                
				<% if flash[:success] %>
                <div id="onnistuminen">
                    <%= flash[:sucsess] %>
                </div>
				<br/>
                <%end %>
                
                <%= yield %>
            </div>
            <center>
                <%= luontiaika %>
            </center>
        </div>
    </body>
</html>
