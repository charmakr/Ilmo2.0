<h2>Rekisteröinti</h2>
	<%= link_to "Sisäänkirjautumiseen", :action => "index", :controller =>"sessions" %>
  <% form_for @user do |f| %>
  	<%= f.error_messages %>
    <%= f.label :username, 'Käyttäjänimi' %>:
    <%= f.text_field :username %><br />
	
    <%= f.label :password, 'Salasana' %>:
    <%= f.password_field :password %><br />
	
	<%= f.label :password_cofirmation, 'Salasana uudelleen' %>:
    <%= f.password_field :password_confirmation %>
	<br />
	Account type:<br />
	User:
	<%= radio_button("user", "account_type", "User")%><br />
	Admin:
	<%= radio_button("user", "account_type", "Admin")%>
	    
	<br />
	<%= submit_tag "Rekisteröi" %>
  <% end %>
